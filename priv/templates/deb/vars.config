%% Platform-specific installation paths
{platform_bin_dir,  "/usr/{{bin_or_sbin}}"}.
{platform_data_dir, "/var/lib/{{package_install_name}}"}.
{platform_etc_dir,  "/etc/{{package_install_name}}"}.
{platform_base_dir, "/usr/lib/{{package_install_name}}"}.
{platform_lib_dir,  "{{platform_base_dir}}/lib"}.
{platform_log_dir,  "/var/log/{{package_install_name}}"}.

{runner_script_dir,  "/usr/{{bin_or_sbin}}"}.
{runner_base_dir,     "/usr/lib/{{package_install_name}}"}.
{runner_etc_dir,     "/etc/{{package_install_name}}"}.
{runner_log_dir,     "/var/log/{{package_install_name}}"}.
{runner_user,        "{{package_install_user}}"}.
{runner_lib_dir,     "{{platform_lib_dir}}"}.
{runner_patch_dir,   "{{runner_lib_dir}}/{{package_patch_dir}}"}.
{pipe_dir,           "/tmp/{{package_install_name}}/"}.
